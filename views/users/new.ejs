<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/stylesheets/master.css">
    <title>My App</title>
</head>
<body>
<header>

</header>
<div class="users">
    <!-- main start-->

    <!-- views/users/new.ejs -->
    <div class="new">
        <h3>Sign Up</h3>
        <form id="create_user" class="users_form" action="/users" method="post">
            <label>Email* <span id="email_error" class="error_message"><%= emailError?emailError:"" %></span></label>
            <input type="text" id="email" name="user[email]" value="<%= formData?formData.email:"" %>">
            <label>Nickname* <span id="nickname_error" class="error_message"><%= nicknameError?nicknameError:"" %></span></label>
            <input type="text" id="nickname" name="user[nickname]" value="<%= formData?formData.nickname:"" %>">
            <label>Password* <span id="password_error" class="error_message"><%= passwordError?passwordError:"" %></span></label>
            <input type="text" id="password" name="user[password]" value="">
            <label>Password Confirmation* <span id="password_confirmation_error" class="error_message"></span></label>
            <input type="text" id="password_confirmation" name="user[passwordConfirmation]" value="">
            <p><small>*Required</small></p>
            <input type="button" class="submit_btn" value="Submit">
        </form>
        <a href="javascript:history.back()"><button>Back</button>
    </div>
    <!-- javascript -->
    <script type="text/javascript">
        //console.log("userform.js");
        if(document.querySelector("#create_user")){
            document.querySelector("#create_user input[type='button']").onclick = function(e){
                var isValid = true;
                document.querySelector("#email_error").innerText = "";
                document.querySelector("#nickname_error").innerText = "";
                document.querySelector("#password_error").innerText = "";
                if(document.querySelector("#email").value === ""){
                    isValid = false;
                    document.querySelector("#email_error").innerText = "- Email is required.";
                }
                if(document.querySelector("#nickname").value === ""){
                    isValid = false;
                    document.querySelector("#nickname_error").innerText = "- Nickname is required.";
                }
                if(document.querySelector("#password").value === ""){
                    isValid = false;
                    document.querySelector("#password_error").innerText = "- Password is required.";
                }
                if(document.querySelector("#password").value !== document.querySelector("#password_confirmation").value){
                    isValid = false;
                    document.querySelector("#password_confirmation_error").innerText = "- Confirmation doesn't match with Password.";
                }
                if(isValid){
                    document.querySelector("#create_user").submit();
                }
            };
        }
        if(document.querySelector("#update_user")){
            document.querySelector("#update_user input[type='button']").onclick = function(e){
                var isValid = true;
                document.querySelector("#email_error").innerText = "";
                document.querySelector("#nickname_error").innerText = "";
                document.querySelector("#password_error").innerText = "";
                if(document.querySelector("#email").value === ""){
                    isValid = false;
                    document.querySelector("#email_error").innerText = "- Email is required.";
                }
                if(document.querySelector("#nickname").value === ""){
                    isValid = false;
                    document.querySelector("#nickname_error").innerText = "- Nickname is required.";
                }
                if(document.querySelector("#password").value === ""){
                    isValid = false;
                    document.querySelector("#password_error").innerText = "- Password is required.";
                }
                if(document.querySelector("#new_password").value !== document.querySelector("#password_confirmation").value){
                    isValid = false;
                    document.querySelector("#password_confirmation_error").innerText = "- Confirmation doesn't match with New Password.";
                }
                if(isValid){
                    document.querySelector("#update_user").submit();
                }
            };
        }

    </script>

    <!-- main end -->
</div><!--users end -->
<footer>

</footer>
</body>
</html>