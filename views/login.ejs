<!DOCTYPE html>
<html>

<head> <% include ./static/head %> </head>

<body>
<section id="main_section" style="margin : 60px;">
    <h2>LOGIN</h2>
    <div id="formContent">
        <form class="form-horizontal" action="/login" method="post">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">ID</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="email" placeholder="ID">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-4">
                    <input type="password" class="form-control" name="password" placeholder="Password" value="">
                </div>
            </div>

            <% loginError.forEach(function(e){ %>
                <p class="error_message"><%= e%></p>
            <% }) %>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Sign in</button>
                </div>
            </div>
        </form>
    </div>
</section>
<footer> <% include ./static/footer %> </footer>

</body>

</html>
